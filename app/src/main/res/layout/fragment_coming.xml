<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.hoatdong.fragment.coming.HoatDongComingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <include layout="@layout/header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_hoatdong_coming"
                android:layout_width="match_parent"
                android:paddingBottom="72dp"
                android:clipToPadding="false"
                android:layout_height="match_parent"/>
            <ProgressBar
                android:id="@+id/coming_progress"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_store_hoatdong"
        android:transformPivotY="10dp"
        android:transitionName="@string/share_hoatdong"
        android:drawablePadding="@dimen/margin_default"
        android:drawableLeft="@drawable/ic_add_white_24dp"
        android:textColor="@color/colorWhite"
        android:paddingRight="24dp"
        android:paddingLeft="16dp"
        android:background="@drawable/bg_extended_floating_button"
        android:textAllCaps="false"
        android:text="@string/addHoatDong"
        android:layout_margin="@dimen/margin_16"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>