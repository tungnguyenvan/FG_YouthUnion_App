<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/radius_cartview_default"
    android:layout_margin="@dimen/margin_default"
    android:translationZ="10dp"
    android:elevation="@dimen/elevation_cartview_default"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/item_hoatdong_layout"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/hoatdong"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:layout_margin="@dimen/margin_default"
            android:src="@drawable/logo_hueic"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/item_hoatdong.txt.name"
            android:background="#59000000"
            android:padding="@dimen/padding_default"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_size_title_default"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
