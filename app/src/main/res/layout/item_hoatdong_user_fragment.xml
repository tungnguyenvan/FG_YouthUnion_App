<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:translationZ="2dp"
    app:cardCornerRadius="@dimen/radius_cartview_default"
    android:layout_margin="@dimen/margin_default"
    android:elevation="@dimen/elevation_cartview_default"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item.userfragment.img"
            android:scaleType="centerCrop"
            android:src="@drawable/hoatdong"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <TextView
            android:id="@+id/item.userfragment.name"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:background="#59000000"
            android:padding="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>