<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/padding_default"
    android:gravity="center_vertical"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:transitionName="@string/share_view"
        android:layout_margin="@dimen/margin_default"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"/>

        <TextView
            android:text="@string/title_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_default"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_default"
        android:orientation="horizontal"
        android:background="@drawable/bg_office_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@color/colorGray"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:text="@string/office365"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"/>

        <TextView
            android:text="@string/title_login_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorDarkGray"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/colorBlack"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/login.edt.email"
        android:inputType="textEmailAddress"
        android:hint="@string/your_email_address"
        android:layout_margin="@dimen/margin_default"
        android:textSize="@dimen/font_size_14"
        android:padding="@dimen/padding_edittext"
        android:background="@drawable/bg_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/colorBlack"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/login.edt.password"
        android:inputType="textPassword"
        android:hint="@string/your_password"
        android:layout_margin="@dimen/margin_default"
        android:textSize="@dimen/font_size_14"
        android:padding="@dimen/padding_edittext"
        android:background="@drawable/bg_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_margin="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/login_cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_cb_remember"
            android:text="@string/remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorBlue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn_signin"
        android:text="@string/login"
        android:textAllCaps="false"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/bg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>